{{>header}}



<div class="task__box-flexContainer">

<form action="/tasks" class="task-form">
 <div class="form-container">
   <div class="form-group">
    <input type="radio" name="completed" value="true" id="true" class="form__radio-input">
    <label for="true" class="form__radio-label">
      <span class="form__radio-button"></span>
      Completed Status True
    </label>
  </div>
  <div class="form-group">
    <input type="radio" name="completed" id="false" value="false" class="form__radio-input">
    <label for="false" class="form__radio-label">
      <span class="form__radio-button"></span>
      Completed Status False
    </label>
  </div>
    <div class="form-group">
      <input type="submit" class="task__box-button">
    </div>
  </div>
 
</form>
<div class="task__box-container">

{{#each tasks}}
 

  <div class="task__box">
    <div class="task__box-description">{{substring this.description}}...</div>
  
   <div class="task__box-down">
     <div class="task__box-status"><span class="task__box-status-completed">Completed :</span>  {{this.completed}}
      </div>
    
    <a class="task__box-button" href="/tasks/{{this._id}}">See More</a>
   </div>
    
  </div>
    
{{/each}}

</div>
</div>

{{>footer}}